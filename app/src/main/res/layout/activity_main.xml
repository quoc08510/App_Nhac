<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background_banner"
    tools:context=".Activity.MainActivity">
    <EditText
        android:id="@+id/edittexttendangnhap"
        android:hint="Tên đăng nhập"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edittextmatkhau"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="mật khẩu"
        android:inputType="textPassword" />
    <CheckBox
        android:layout_marginTop="7dp"
        android:id="@+id/checkboxghinho"
        android:text="ghi nhớ"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/custom_background_button_dn_dk"
            android:id="@+id/buttondangnhap"
            android:layout_marginLeft="60dp"
            android:text="Đăng Nhập"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_background_button_dn_dk"
            android:id="@+id/buttondangky"
            android:layout_marginLeft="60dp"
            android:text="Đăng ký"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textColor="#5CD3BA"
        android:layout_marginLeft="250dp"
        android:text="Lê Dương Quốc"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>